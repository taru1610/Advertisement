    <%= form.label :title %>
    <%= form.text_field :title ,class:"form-control" ,placeholder:"Title" %>
  </div>

  <div class="field form-group">
    <%= form.label :description %>
    <%= form.text_area :description ,class:"form-control" ,placeholder:"Description" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email ,class:"form-control" ,placeholder:"Email Id" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone , class:"form-control",placeholder:"Phone Number" %>
  </div>
<br/>
  <div class="actions">
    <%= form.submit  class:'btn btn-outline-dark' %>
  </div>
<% end %>
